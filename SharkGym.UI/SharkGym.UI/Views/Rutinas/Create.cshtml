<div>
    <a href="@Url.Action("Index", "Rutinas")" class="btn btn-info">Ir a la lista</a>
</div>

<section class="section" id="contact-us">
</section>

@section Scripts {
@Scripts.Render("~/bundles/jqueryval")
}