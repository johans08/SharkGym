@model SharkGym.DB.Modelo.Factura

@{
    ViewBag.Title = "Edit";
}

<!-- ***** Contact Us Area Starts ***** -->
<section class="section" id="contact-us">
    <div class="container-fluid">
            <div class="row" align="center">
                <div align="center">
                    <div class="section-heading" align="center">
                        <h2>Editar <em>Factura</em></h2>
                        <p>Edita los datos de la factura del cliente.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-xs-12">
                <div class="contact-form">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.PK_IdFactura)

                            <div class="form-group">
                                @Html.LabelFor(model => model.ID_Cliente, "ID_Cliente", htmlAttributes: new { @class = "control-label col-md-2", @style = "color: #ffffff" })
                                <div class="col-md-10">
                                    @Html.DropDownList("ID_Cliente", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ID_Cliente, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Mensualidad, htmlAttributes: new { @class = "control-label col-md-2", @style = "color: #ffffff" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Mensualidad, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Mensualidad, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Iva, htmlAttributes: new { @class = "control-label col-md-2", @style = "color: #ffffff" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Iva, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Iva, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Total, htmlAttributes: new { @class = "control-label col-md-2", @style = "color: #ffffff" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Total, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Total, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-xs-12">
                <div>
                    <h1 align="center">Detalles De La <a style="color : #34aa98">Factura</a> </h1>
                    <hr />
                    <div align="center">
                        <dl>
                            <dt>
                                @Html.DisplayNameFor(model => model.Mensualidad)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Mensualidad)
                            </dd>

                        </dl>
                    </div>
                    <hr />
                    <div align="center">
                        <dl>
                            <dt>
                                @Html.DisplayNameFor(model => model.Iva)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Iva)
                            </dd>
                        </dl>
                    </div>
                    <hr />
                    <div align="center">
                        <dl>
                            <dt>
                                @Html.DisplayNameFor(model => model.Total)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Total)
                            </dd>
                        </dl>
                    </div>
                    <hr />
                    <div align="center">
                        <dl>
                            <dt>
                                @Html.DisplayNameFor(model => model.Usuario.Nombre)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Usuario.Nombre)
                            </dd>
                        </dl>
                    </div>

                </div>
            </div>

    </div>
</section>
<!-- ***** Contact Us Area Ends ***** -->

<br>
<br>
<p align="left">
    @Html.ActionLink("Back to List", "Index", new { @id = Model.PK_IdFactura }, new { @class = "btn btn-danger" })
</p>
<!-- ***** Contact Us Area Ends ***** -->
<section class="section" id="contact-us">
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
